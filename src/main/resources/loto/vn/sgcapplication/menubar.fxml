            <FontIcon iconLiteral="enty-calculator" selectionEnd="1" />
         </graphic>
      </Label>
      <Label graphicTextGap="10.0" styleClass="label1" text="Statistic">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
         <graphic>
            <FontIcon iconLiteral="eli-signal" selectionEnd="1" />
         </graphic>
         <HBox.margin>
            <Insets left="40.0" />
         </HBox.margin>
      </Label>
      <Label graphicTextGap="10.0" onMouseClicked="#exitApplication" styleClass="label1" text="Exit">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
         <graphic>
            <FontIcon iconLiteral="eli-remove-sign" selectionEnd="1" />
         </graphic>
         <HBox.margin>
            <Insets left="540.0" />
         </HBox.margin>
