<HBox fx:id="mainPane" alignment="CENTER_LEFT" maxHeight="28.0" maxWidth="1280.0" minHeight="28.0" minWidth="1280.0" prefHeight="28.0" prefWidth="1280.0" styleClass="menu-bar" stylesheets="@SGCCss.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loto.vn.sgcapplication.controller.MenuBarController">
